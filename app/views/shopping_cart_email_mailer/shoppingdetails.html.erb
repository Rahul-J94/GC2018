<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body bgcolor="#FFFFFF">
    <table class="head-wrap" bgcolor="#999999">
    	<tr>
    		<td></td>
    		<td class="header container" >

    				<div class="content">
    				<table bgcolor="#999999">
    					<tr>
    						<td><img src="/assets/upload/logo.png" /></td>
    						<!-- <td align="right"><h6 class="collapse">Basic</h6></td> -->
    					</tr>
    				</table>
    				</div>

    		</td>
    		<td></td>
    	</tr>
    </table>

    <!-- email body -->

    <table>
      <tbody>
        <tr>
          <td class="container" bgcolor="#FFFFFF">
            <div class="content">
              <table>
                <tbody>
                  <tr>
                    <td>
                      <% if not @hotels.blank? %>
                    <h3 class="pull-left" style="padding-left:10px;">Hotel</h3>
                    <div class="col-xs-12 pad_none condition-of-sale-table-new2">
                      <div class="col-xs-12 pad_none condition-of-sale-heading-yellow-out">
                        <span style="width: 40%;">Hotel</span>
                        <span style="width: 15%;">In</span>
                        <span style="width: 15%;">Out</span>
                        <span style="width: 15%;">Rate</span>
                        <span style="width: 15%;"></span>
                      </div>

                      <div class="col-xs-12 pad_none condition-of-sale-table-scroll-out scrollbox" style="height: auto;">
                        <div class="panel-group" id="accordion">
                          <% @hotels.each do |h| %>
                            <div class="panel panel-default">
                            <div class="panel-heading">
                                <!-- <h4 class="panel-title "> -->
                                <div class="accordion-toggle " >
                                  <p style="width: 40%;">
                                    <%= h.hotel.name %>, <%= h.rooms_type%>
                                  </p>
                                  <p style="width: 20%;">7/1/2017</p>
                                  <p style="width: 20%;">31/3/18</p>
                                  <p style="width: 20%;">$ <%= h.rate %></p>

                                </div>
                                <!-- </h4> -->
                            </div>
                            </div>
                            <%end%>
                        </div>
                      </div>
                    </div>
                  <% end %>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <% if not @events.blank? %>
              					<h3 class="pull-left" style="padding-left:10px;">Events</h3>
              					<div class="col-xs-12 pad_none condition-of-sale-table-new2">
              						<div class="col-xs-12 pad_none condition-of-sale-heading-yellow-out">
              							<span style="width: 40%;">Name</span>
              							<span style="width: 15%;">Date</span>
              							<span style="width: 15%;">Category</span>
              							<span style="width: 15%;">Rate</span>
              							<span style="width: 15%;"></span>
              						</div>

              						<div class="col-xs-12 pad_none condition-of-sale-table-scroll-out scrollbox" style="height: auto;">
              							<div class="panel-group" id="accordion">
              								<% @events.each do |ev| %>
              									<div class="panel panel-default">
              									<div class="panel-heading">
              											<!-- <h4 class="panel-title "> -->
              											<div class="accordion-toggle " >
              												<p style="width: 40%;">
              													<%= ev.event_name %>
              												</p>
              												<p style="width: 20%;"><%= ev.event_date.strftime("%d/%m/%Y") %></p>
              												<p style="width: 20%;"><%= ev.event_cat %></p>
              												<p style="width: 20%;">$ <%= ev.rate %></p>

              											</div>
              											<!-- </h4> -->
              									</div>
              									</div>
              									<%end%>
                          <%end%>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <div class="col col-xs-12" style="text-align:right;">
                        <h3>Total : $ <%= (HotelShoppingCart.sum('rate') + EventShoppingCart.sum('rate')).round(2)  %></h3>
                      </div>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </td>
        </tr>
      </tbody>
    </table>

  </body>
</html>
