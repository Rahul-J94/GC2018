<%= render 'layouts/header'%>
<section class="banner-main accomodation-banner" style="background: rgba(0, 0, 0, 0) url('/assets/images/star.png') no-repeat scroll center top / cover;">
	<div class="container">
	</div>
	<div class="gold-cost-right" >
		<img src="/assets/images/gold-cost-img.png" alt="">
	</div>
</section>
<section class="accommodation-main-outer4">
  <div class="container">
    <div class="row">
		<div class="exclusive-reprensentatio-inner accommodation-main-inner4">
			<h2 class="fadeInUp wow" data-wow-duration="2s" data-wow-delay="0s">Review Booking</h2>



    	</div>
    </div>

    <div class="row">
		<div class="exclusive-reprensentatio-inner accommodation-main-inner4">
		
	        <div class="col-sm-12 col-md-10 col-md-offset-1">
	        	<% if @card_date.blank? %>
					<div class="alert alert-info alert-dismissable">
			          <i class="fa fa-info-circle"></i>
					   Note: All requests above $2,500 will be checked by the KSG Team and you will be contacted offline for payment via bank transfer. Transactions under $2,500 will be processed online (with an additional 2.5% credit card surcharge). Transactions found to have breached the terms and conditions of sale may be cancelled by the KSG Team. For more information on the Terms and Conditions please download them <a href='https://www.dropbox.com/s/aeej5d6w4mqvprc/Terms%20and%20Conditions%20of%20Sale%20-%20KSG%20LEGAL%20POLICY%20v3.pdf?dl=0'><strong style="text-decoration:underline">here</strong></a>
			        </div>
				<% end %>
				<h3 class="pull-left" style="padding-left:10px;">Your Information</h3>
				<div class="col-xs-12 pad-none">
					<table class="table table-hover">
					    <thead>
					      <tr>
					        <th>Name</th>
					        <th>Email</th>
					        <th>Phone</th>
					        <th>Address</th>
					      </tr>
					    </thead>
					    <tbody>
					    	
					      <tr>
					        <td><%= @current_user.first_name %> <%= @current_user.last_name %></td>
							<td><%= @current_user.email %></td>
							<td><%= @current_user.phone %></td>
							<td><%= @current_user.address %></td>

					      </tr>
					    
					    </tbody>
					</table>
				</div>
		
	        </div>
	    </div>
    </div>

    <% if not @cart_data.blank? %>
    	<div class="row">
			<div class="exclusive-reprensentatio-inner accommodation-main-inner4">
			

	        <div class="col-sm-12 col-md-10 col-md-offset-1">
	        
				<h3 class="pull-left" style="padding-left:10px;">Bookings Information</h3>
				<div class="col-xs-12 pad-none">
					<table class="table table-hover">
					    <thead>
					      <tr>
					        <th>Item</th>
					        <th>Name</th>
					        <th>Date</th>
					        <th>Quantity</th>
					        <th>Rate</th>
					        <th>Total</th>
					      </tr>
					    </thead>
					    <tbody>
					    	<% @cart_data.each do |i| %>
						      <tr>
						        <td><%= i['item_type'] %></td>
								<td><%= i['name'] %></td>
								<td><%= i['event_date'] %></td>
								<td><%= i['quantity'] %></td>
								<td>AUD <%= i['amount'] %></td>
								<td>AUD <%= i['amount'].to_f * i['quantity'].to_f %></td>
						      </tr>
					      <% end %>
					    </tbody>
					</table>
					<h3 style="float: right;">Total : AUD <%= @total %></h3>
				</div>
		
				

	        </div>
	    	</div>
	    </div>
    <% end %>

    <% if not @card_data.blank? %>
	    <div class="row">
			<div class="exclusive-reprensentatio-inner accommodation-main-inner4">
			
		        <div class="col-sm-12 col-md-10 col-md-offset-1">
		        
					<h3 class="pull-left" style="padding-left:10px;">Card Details</h3>
					<div class="col-xs-12 pad-none">
						<table class="table table-hover">
						    <thead>
						      <tr>
						        <th>Card Type</th>
						        <th>Card Number</th>
						        <th>Expire Date</th>
						        <th>CVC Code</th>
						      </tr>
						    </thead>
						    <tbody>	
						      <tr>
						        <td><%= @card_data['cardtype'] %></td>
						        <td><%= @card_data['cardNumber'] %></td>
								<td><%= @card_data['cardExpiry'] %></td>
								<td><%= @card_data['cardCVC'] %></td>
						      </tr>
						    </tbody>
						</table>
					</div>
			
		        </div>
		    </div>
	    </div>
	<% end %>

	<div class="row">
		<div class="exclusive-reprensentatio-inner accommodation-main-inner4">
		
	        <div class="col-sm-12 col-md-10 col-md-offset-1" style="text-align:right;">
	        	<div class="col-xs-12 pad-none">
				<form role="form" id="payment-form" method="POST" action="/make_payment/">
					<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
					<% if not @card_data.blank? %>
						<input type="hidden" name="from_card" value="true">
						<input type="hidden" name="cardNumber" value="<%= @card_data['cardNumber'] %>">
						<input type="hidden" name="cardExpiry" value="<%= @card_data['cardExpiry'] %>">
						<input type="hidden" name="cardCVC" value="<%= @card_data['cardCVC'] %>">
						<input type="hidden" name="cardtype" value="<%= @card_data['cardtype'] %>">
					<% end %>
					<a class="subscribe-submit" href="/cart" style="padding: 10px 15px !important; width: auto !important; margin: 9px 10px 10px 0px !important; font-size: 14px;">
						Edit
					</a>
					<button type="submit" id="checkout_btn" class="subscribe-submit" href="/make_payment/" style="padding: 10px 15px !important; width: 100PX !important; margin: 9px 0px 10px 0px !important; font-size: 14px;box-shadow: 0 5px 0 0 #a1790c;">
						Confirm
					</button>
				</form>
		
	        	</div>
	        </div>
	    </div>
    </div>
</div>
</div>
</section>
<style media="screen">
	.table-hover th{
		background-color: #F5BA13;
		font-family: "proxima_novaregular";
		text-align: center;
		text-transform: uppercase;
    vertical-align: middle;
	}

	.continue_shop:hover{
		background-color: white !important;
		color:  black !important;
	}
</style>
<%= render 'layouts/footer'%>
