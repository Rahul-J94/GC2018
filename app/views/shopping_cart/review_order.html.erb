<%= render 'layouts/header'%>
<section class="banner-main accomodation-banner" style="background: rgba(0, 0, 0, 0) url('/assets/images/star.png') no-repeat scroll center top / cover;">
	<div class="container">
	</div>
	<div class="gold-cost-right" >
		<img src="/assets/images/gold-cost-img.png" alt="">
	</div>
</section>
<section class="accommodation-main-outer4">
  <div class="container">
    <div class="row">
		<div class="exclusive-reprensentatio-inner accommodation-main-inner4">
			<h2 class="fadeInUp wow" data-wow-duration="2s" data-wow-delay="0s">Review Booking</h2>

    	</div>
    </div>

    <div class="row">
		<div class="exclusive-reprensentatio-inner accommodation-main-inner4">
		
	        <div class="col-sm-12 col-md-10 col-md-offset-1">
	        
				<h3 class="pull-left" style="padding-left:10px;">Your Information</h3>
				<div class="col-xs-12 pad-none">
					<table class="table table-hover">
					    <thead>
					      <tr>
					        <th>Name</th>
					        <th>Email</th>
					        <th>Phone</th>
					        <th>Address</th>
					      </tr>
					    </thead>
					    <tbody>
					    	
					      <tr>
					        <td><%= @current_user.first_name %> <%= @current_user.last_name %></td>
							<td><%= @current_user.email %></td>
							<td><%= @current_user.phone %></td>
							<td><%= @current_user.address %></td>

					      </tr>
					    
					    </tbody>
					</table>
				</div>
		
	        </div>
	    </div>
    </div>

    <% if not @cart_data.blank? %>
    	<div class="row">
			<div class="exclusive-reprensentatio-inner accommodation-main-inner4">
			

	        <div class="col-sm-12 col-md-10 col-md-offset-1">
	        
				<h3 class="pull-left" style="padding-left:10px;">Bookings Information</h3>
				<div class="col-xs-12 pad-none">
					<table class="table table-hover">
					    <thead>
					      <tr>
					        <th>Item</th>
					        <th>Name</th>
					        <th>Date</th>
					        <th>Quantity</th>
					        <th>Rate</th>
					        <th>Total</th>
					      </tr>
					    </thead>
					    <tbody>
					    	<% @cart_data.each do |i| %>
						      <tr>
						        <td><%= i['item_type'] %></td>
								<td><%= i['name'] %></td>
								<td><%= i['event_date'] %></td>
								<td><%= i['quantity'] %></td>
								<td>AUD <%= i['amount'] %></td>
								<td>AUD <%= i['amount'].to_f * i['quantity'].to_f %></td>
						      </tr>
					      <% end %>
					    </tbody>
					</table>
					<h3 style="float: right;">Total : AUD <%= @total %></h3>
				</div>
		
				

	        </div>
	    </div>
    <% end %>

    <div class="row">
		<div class="exclusive-reprensentatio-inner accommodation-main-inner4">
		
	        <div class="col-sm-12 col-md-10 col-md-offset-1">
	        
				<h3 class="pull-left" style="padding-left:10px;">Card Details</h3>
				<div class="col-xs-12 pad-none">
					<table class="table table-hover">
					    <thead>
					      <tr>
					        <th>Card number</th>
					        <th>Expire Date</th>
					        <th>CVC Code</th>
					      </tr>
					    </thead>
					    <tbody>
					    	
					      <tr>
					        <td><%= @card.number %></td>
							<td><%= @card.date %></td>
							<td><%= @card.cvv %></td>

					      </tr>
					    
					    </tbody>
					</table>
				</div>
		
	        </div>
	    </div>
    </div>
</div>
</div>
</section>
<style media="screen">
	.table-hover th{
		background-color: #F5BA13;
		font-family: "proxima_novaregular";
		text-align: center;
		text-transform: uppercase;
    vertical-align: middle;
	}

	.continue_shop:hover{
		background-color: white !important;
		color:  black !important;
	}
</style>
<%= render 'layouts/footer'%>
